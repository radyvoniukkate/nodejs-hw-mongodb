{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0.0",
    "title": "Contacts Book",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Contact app project"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url":"https://nodejs-hw-mongodb-hw7-mi2m.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Operations about contacts."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/contacts": {
      "post": {
        "tags": ["Contacts"],
        "summary": "Create contact",
        "operationId": "createContact",
        "description": "Create a contact with payload",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "phoneNumber", "contactType"],
                "properties": {
                  "name": {
                    "description": "Contact's name",
                    "type": "string",
                    "example": "John Smith"
                  },
                  "phoneNumber": {
                    "description": "Contact's phone number",
                    "type": "string",
                    "example": "324-84-15"
                  },
                  "email": {
                    "description": "Contact's email",
                    "type": "string",
                    "example": "smith@mail.com"
                  },
                  "isFavorite": {
                    "description": "Favorite contact",
                    "type": "boolean",
                    "example": true
                  },
                  "contactType": {
                    "description": "Which group contact belongs to",
                    "type": "string",
                    "enum": ["work", "home", "personal"],
                    "example": "work"
                  },
                  "userId": {
                    "description": "Contact's parent id",
                    "type": "string",
                    "example": "66fe6d0b5b7ffb5c70dfd498"
                  },
                  "photo": {
                    "description": "Link to contact's photo",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "../swagger/components/responses/201.yaml"
          },
          "400": {
            "$ref": "../swagger/components/responses/400.yaml"
          },
          "401": {
            "$ref": "../swagger/components/responses/401.yaml"
          },
          "500": {
            "$ref": "../swagger/components/responses/500.yaml"
          }
        }
      },
      "get": {
        "tags": ["Contacts"],
        "summary": "Get list of contacts",
        "operationId": "getContacts",
        "description": "Get list of contacts with this endpoint",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": { "type": "integer" },
            "example": 1
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": { "type": "integer" },
            "example": 10
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": { "type": "string" },
            "example": "name",
            "description": "All contact's fields can be mentioned. Default value - _id"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": { "type": "string", "enum": ["asc", "desc"] },
            "example": "asc"
          },
          {
            "in": "query",
            "name": "contactType",
            "schema": { "type": "string" },
            "example": "home"
          }
        ],
        "responses": {
          "200": {
            "$ref": "../swagger/components/responses/200.yaml"
          },
          "400": {
            "$ref": "../swagger/components/responses/400.yaml"
          },
          "401": {
            "$ref": "../swagger/components/responses/401.yaml"
          },
          "500": {
            "$ref": "../swagger/components/responses/500.yaml"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get contact by id",
        "operationId": "getContact",
        "description": "Get contact by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66d1a08277df1f701522be34"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "../swagger/components/responses/200.yaml"
          },
          "404": {
            "$ref": "../swagger/components/responses/404.yaml"
          },
          "500": {
            "$ref": "../swagger/components/responses/500.yaml"
          }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete contact by id",
        "operationId": "deleteContactById",
        "description": "Delete contact by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66e548724022740bbde74597"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully deleted the contact. No content returned."
          },
          "400": {
            "$ref": "../swagger/components/responses/400.yaml"
          },
          "401": {
            "$ref": "../swagger/components/responses/401.yaml"
          },
          "404": {
            "$ref": "../swagger/components/responses/404.yaml"
          },
          "500": {
            "$ref": "../swagger/components/responses/500.yaml"
          }
        }
      },
      "patch": {
        "tags": ["Contacts"],
        "summary": "Update contact by id",
        "operationId": "updateContactById",
        "description": "Update contact by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66d1a08277df1f701522be35"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Contact's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "phoneNumber": {
                    "description": "Contact's phone number",
                    "type": "string",
                    "example": "150-36-15"
                  },
                  "email": {
                    "description": "Contact's email",
                    "type": "string",
                    "example": "test003@mail.com"
                  },
                  "isFavorite": {
                    "description": "Favorite contact",
                    "type": "boolean",
                    "example": true
                  },
                  "contactType": {
                    "description": "Which group contact belongs to",
                    "type": "string",
                    "enum": ["work", "home", "personal"],
                    "example": "work"
                  },
                  "photo": {
                    "description": "Link to contact's photo",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "../swagger/components/responses/200.yaml"
          },
          "400": {
            "$ref": "../swagger/components/responses/400.yaml"
          },
          "401": {
            "$ref": "../swagger/components/responses/401.yaml"
          },
          "404": {
            "$ref": "../swagger/components/responses/404.yaml"
          },
          "500": {
            "$ref": "../swagger/components/responses/500.yaml"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "$ref": "../swagger/components/schemas/contact.yaml"
      }
    },
    "responses": {
      "401": {
        "$ref": "../swagger/components/responses/401.yaml"
      }
    }
  }
}
